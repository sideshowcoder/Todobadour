<li id="todo_<%= todo.id %>">  
  <span class="title">
    <%= best_in_place todo, :title, :path => list_todo_path(@list, todo) %>
  </span>
  <span class="done">
    <%= best_in_place todo, :done, :type => :checkbox, 
                                   :collection => ["✓", "☓"],
                                   :path => list_todo_path(@list, todo) %>
  </span>
  <%= link_to :delete, [@list, todo], :method => :delete,
                                      :remote => true,
                                      :title => todo.title %>
</li>