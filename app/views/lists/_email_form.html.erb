<div>
<%= form_for @list, :url => email_list_path, :method => :post, :remote => true do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <div>
    <%=label_tag 'You' %>
    <%=text_field_tag 'sender'%>
  </div>
  <div>
    <%=label_tag 'Share with' %>
    <%=email_field_tag 'receiver'%>
  </div>
  <div>
    <%= submit_tag 'Send EMail' %>
  </div>
<% end %>
</div>