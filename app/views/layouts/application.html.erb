<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
 
  <%= render "layouts/iefixes" %>
 
  <%= stylesheet_link_tag "application", :media => "all" %>
  
  <% faye_url = "http://#{request.host}:9292/faye" %>
  <%= javascript_include_tag "application", "#{faye_url}.js" %>
  <%= javascript_tag "var FAYE_URL = '#{faye_url}';" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

<%= render "layouts/header" %>

<div class="content">
<%= yield %>
</div>

<%= render "layouts/footer" %>

<% if Rails.env.development? %>
<div style="clear:both;">
<!-- Debug output in development -->
  <%= debug(params) %>
<% end %>

</div>
</body>
</html>
