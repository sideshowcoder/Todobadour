<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render "layouts/iefixes" %>
  <% faye_url = "http://#{request.host}:9292/faye" %>
  <%= stylesheet_link_tag    "screen", :media => "screen, projection" %>
  <%= stylesheet_link_tag    "print", :media => "print" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", "#{faye_url}.js" %>
  <script type="text/javascript">window.fayeURL = '<%= faye_url %>';</script>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

<%= render "layouts/header" %>

<div class="span-24 content">
<%= yield %>
</div>

<%= render "layouts/footer" %>

<% if Rails.env.development? %>
<div style="clear:both;">
<!-- Debug output in development -->
  <%= debug(params) %>
<% end %>

</div>
</body>
</html>
